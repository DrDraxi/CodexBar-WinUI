<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CodexBar.Views.AboutSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodexBar.Views">

    <ScrollViewer>
        <StackPanel Spacing="16" Padding="0,0,20,20">
            <TextBlock Text="About" Style="{StaticResource TitleTextBlockStyle}"/>

            <StackPanel Spacing="8">
                <TextBlock Text="CodexBar" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="AI Usage Tracker for Windows"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock x:Name="VersionText"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            </StackPanel>

            <StackPanel Spacing="4" Margin="0,16,0,0">
                <TextBlock Text="Track your AI provider usage in the system tray."
                           TextWrapping="Wrap"/>
                <TextBlock Text="Supports Claude, Copilot, Cursor, Gemini, and more."
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Spacing="4" Margin="0,16,0,0">
                <HyperlinkButton Content="View on GitHub" NavigateUri="https://github.com/steipete/CodexBar"/>
                <TextBlock Text="Based on CodexBar for macOS by Peter Steinberger"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           FontSize="12"/>
            </StackPanel>

            <TextBlock Text="MIT License" Margin="0,16,0,0"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
