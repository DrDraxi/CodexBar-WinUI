<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CodexBar.Views.UsagePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodexBar.Views"
    Title="CodexBar">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="16,32,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
            <TextBlock Text="CodexBar" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Text="AI Usage" FontSize="14"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Provider Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ProviderCards" Spacing="10">
                <!-- Cards will be added dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,12,0,0" HorizontalAlignment="Right">
            <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
